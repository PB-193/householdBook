<div class="card" >
  <div class="card-body" >
    <%= form_with method:"get" , local: true do |f| %>
      <div class="row">
        <div class="col">
          <%= f.number_field "year" , placeholder: "年度を入力" , class:"form-control" %>
        </div>
        <div class="col">
            <%= f.number_field "month" , placeholder: "対象月を入力" , class:"form-control" %>
        </div>
        <div class="col">
          <%= f.submit "検索",class:"btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>